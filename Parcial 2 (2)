#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ()
{
	float S, POT, X;
	int N, FACT, i;
	S=2;
	i=1;
	FACT=1;
	cout <<"Ingrese el valor de N: "<<endl;
	cin>> N;
	cout<< "Ingrese el valor de X: "<<endl;
	cin>>X;
	while (i<=N)
	{
		POT=pow(X,i);
		FACT=FACT*i;
		S=S+(POT/FACT);
		i++;
	}
	cout<< "El valor de la sumatoria es: "<<S<<endl;
	getch();
}
